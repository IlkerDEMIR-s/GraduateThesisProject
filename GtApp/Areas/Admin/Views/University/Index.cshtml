@model List<University>

<div class="text-center">
    <div class="display-6 my-3 font-weight-bold" style="font-family: 'Arial', sans-serif;">Universities</div>
    <table class="table table-striped table-hover my-3">
        <hr class="my-4" style="border: 2px solid black; border-radius: 5px;">
        <div class="text-center">
            <div class="d-flex justify-content-end my-3">
                <a class="btn btn-outline-success" asp-action="Create">
                    <i class="fa fa-plus"></i>
                    Create
                </a>
            </div>
        </div>
        <thead>
            <tr>
                <th class="font-weight-bold"><i class="fa-solid fa-hashtag"></i>University Id</th>
                <th class="font-weight-bold">University Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var university in Model)
            {
                <tr>
                    <td>@university.UNIVERSITY_ID</td>
                    <td>@university.UNIVERSITY_NAME</td>

                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" asp-action="Delete"
                               asp-route-id="@university.UNIVERSITY_ID">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
