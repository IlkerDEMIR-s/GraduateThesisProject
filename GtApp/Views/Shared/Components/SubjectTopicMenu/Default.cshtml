@model IEnumerable<SubjectTopic>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa-solid fa-square-caret-down text-secondary"></i>
        Subject Topics
    </h6>
</div>

<div class="my-4">
    <select id="subjectTopicDropdown" class="form-control">
        <option value="">Select a Subject Topic</option>
        @foreach (var st in Model)
        {
            <option value="@Url.Action("Index", new { subjectTopicId = st.SUBJECT_TOPIC_ID })">
                @st.SUBJECT_TOPIC_CONTENT
            </option>
        }
    </select>
</div>

<script>
    document.getElementById("subjectTopicDropdown").addEventListener("change", function () {
        var selectedValue = this.value;
        if (selectedValue) {
            window.location.href = selectedValue;
        }
    });
</script>
