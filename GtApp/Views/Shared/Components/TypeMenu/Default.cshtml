@model IEnumerable<ThesisType>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa-solid fa-square-caret-down text-secondary"></i>        
        Types
    </h6>
</div>

<div class="my-4">
    <select id="typeDropdown" class="form-control">
        <option value="">Select a Type</option>
        @foreach (var t in Model)
        {
            <option value="@Url.Action("Index", new { typeId = t.TYPE_ID })">
                @t.TYPE_NAME
            </option>
        }
    </select>
</div>

<script>
    document.getElementById("typeDropdown").addEventListener("change", function () {
        var selectedValue = this.value;
        if (selectedValue) {
            window.location.href = selectedValue;
        }
    });
</script>
